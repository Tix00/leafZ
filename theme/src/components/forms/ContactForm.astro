---
import {
  Button,
  FormInput,
  FormSelect,
  FormTextarea,
} from "@littlesticks/odyssey-theme-components";

const selectOptions = ["Google Search", "Social Media", "Email"];
---

<form
  name="Contact Form"
  method="POST"
  action="https://api.web3forms.com/submit"
>
  <input
    type="hidden"
    name="access_key"
    value="a51d5c4e-90ed-43e0-8039-0a629740d1df"
  />
  <FormInput type="text" label="Name" name="Name" placeholder="John Doe" />
  <FormInput
    type="email"
    label="Email"
    name="Email"
    placeholder="hello@example.com"
  />
  <FormSelect label="How Did You Hear About Us?" options={selectOptions} />
  <FormTextarea
    label="Message"
    name="Message"
    placeholder="Your message here...s"
  />
  <Button>Submit</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>
