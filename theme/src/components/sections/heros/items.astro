---


const images = await Astro.glob(
"../../../../public/assets/images/items/*"
).then((files) => {
  return files.map((file) => file.default);
});

---

<script
  is:inline
  src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
  integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
  crossorigin="anonymous"></script>
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
  integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
  crossorigin="anonymous"></script>
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
  integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
  crossorigin="anonymous"></script>

<div id="carouselExampleIndicators" class="carousel .carousel-dark slide" data-ride="carousel" data-interval="1800">

  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block 2-100" src= "assets/images/coverphoto.png"/>
    </div>
    {
      images.map(image => (
        <div class="carousel-item">
          <img
            class="d-block w-100"
            src={image.src}
            alt=""
            loading="lazy"
          />
        </div>
      ))
    }
  </div>
  <a
    class="carousel-control-prev"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="false"></span>
  </a>
  <a
    class="carousel-control-next"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="false"></span>
  </a>
</div>
